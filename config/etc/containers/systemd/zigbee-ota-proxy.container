[Unit]
Description=Zigbee-OTA proxy
After=network.target

[Container]
ContainerName=zigbee-ota-proxy
Image=docker.io/library/nginx:latest
AutoUpdate=registry
Network=brvirt:host_interface_name=veth_zbotapx,mac=8e:cc:7e:8a:4e:12
DNS=none
Volume=/usr/local/share/zigbee-ota-proxy/default.conf:/etc/nginx/conf.d/default.conf:ro,idmap,z

[Service]
Restart=always
RestartMode=direct
RestartSec=10

[Install]
WantedBy=multi-user.target
